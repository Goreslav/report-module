{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "#app": ["./node_modules/nuxt/dist/app"],
      "#imports": ["./node_modules/nuxt/dist/app/composables"]
    },
    "types": ["node"],
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "playground",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
